<h1>My LookALike Details</h1>

<% if @user.look_a_like != nil %>

    <p>You are an active look-a-like</p>

    <h2>Invitations</h2>

    <h2>Events</h2>

    <table>
    <thead>
        <tr>
        <th>Date</th>
        <th>Time</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% if @events != nil %>
            <% @events.each do |event| %>
            
                <% if event.look_a_likes.include?(user.look_a_like) %>
                    <tr>
                    <td><%= event.date %></td>
                    <td><%= event.time %></td>
                    <td><%= link_to 'Show', event %></td>
                    <td><%= link_to 'Edit', edit_event_path(event) %></td>
                    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                <% end %>
            <% end %>
        <% end %>
    </tbody>
    </table>

<% else %>
    <p>You are currently not an active look-a-like profile</p>

    <p><%= @user.id %></p>

    <%= form_with(model: @user, local: true) do |user_form| %>

        <div class="field">
            <%= user_form.hidden_field :first_name, value: @user.first_name %>  
        </div>


        <%= user_form.fields_for :look_a_like, LookALike.new do |lookalike_form| %>   
            <div class="field">
                <%= lookalike_form.label "bio" %> 
                <%= lookalike_form.text_field :bio %> 
            </div>
        <% end %>


        <div class="actions">
            <%= user_form.submit %>
        </div>

    <% end %>
    
<% end %>