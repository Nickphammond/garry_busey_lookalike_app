


<% if @user.look_a_like != nil %>


    <%= form_with(model: @user, local: true) do |user_form| %>

        <div class="actions flex flex-col justify-center pb-40 pt-20 font-mono mx-32">

            <%= user_form.fields_for :look_a_like do |lookalike_form| %>

                <div class="flex items-center font-sans overflow-hidden flex-col bg-gray-100">

                
                    <div class="field sm:p-10 flex items-left font-sans overflow-hidden flex-col justify-center ">
                        <label class="rounded-full py-3 px-6 bg-yellow-200 hover:bg-red-300 font-mono">
                            Select images
                            <span style="display:none;">
                                <%= lookalike_form.file_field :images, multiple: true %>
                            </span>
                        </label>
                    </div>



                    <div class="justify-center flex flex-col bg-green-100 m-5">
                        <h2 class="justify-center flex font-mono">Write Bio</h2>
                        <div class="field m-3">
                            <%= lookalike_form.text_field :bio, class: "" %> 
                        </div>
                    </div>

                </div>

            <% end %>

            <div class= "flex justify-center">
                <%= user_form.submit "Update" %>
            </div>

        </div>

    <% end %>












    <div class="m-32 bg-gray-200">
        <h2 class="flex justify-center font-mono p-6 bg-yellow-200">Suburbs</h2>

        <div class="overflow-x-auto">
            
            <div class="bg-gray-100 py-4 flex items-center justify-center overscroll-auto font-sans overflow-hidden">
                

                <table class="min-w-max w-full table-auto mx-1">

                    <thead>
                        <tr class="bg-green-200 text-green-600 text-sm">
                        <th class="py-2 px-4 text-left">name</th>
                        <th class="py-2 px-4 text-left">postcode</th>
                        <th colspan="3"></th>
                        </tr>
                    </thead>

                    <tbody>

                        <% if @user.look_a_like.suburbs != nil %>

                            <% @user.look_a_like.suburbs.each do |suburb| %>

                                <tr>
                                    <td class="m-12 px-4"><%= suburb.name %></td>
                                    <td class="m-9 px-4"><%= suburb.postcode %></td>
                                    <td class="px-4"><%= link_to 'Remove Suburb', remove_suburb_path(suburb) %></td>
                                </tr>




                            <% end %>

                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="py-1 justify-center font-mono">
            <%= link_to 'Add A Suburb', new_suburb_path, class: "flex justify-center bg-purple-300" %>
        </div>
    </div>





<div class="p-32 font-mono">
<%= link_to 'Movies', movies_path, class: "flex justify-center bg-purple-300" %>
</div>





<% end %>