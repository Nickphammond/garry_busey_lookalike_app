


<% if @user.look_a_like != nil %>


    <%= form_with(model: @user, local: true) do |user_form| %>

        <div class="actions flex flex-col justify-center pb-40 pt-20">

            <%= user_form.fields_for :look_a_like do |lookalike_form| %>

                <div class="flex items-center font-sans overflow-hidden flex-col">

                
                    <div class="field sm:p-10 flex items-left font-sans overflow-hidden flex-col justify-center ">
                        <label class="">
                            Add image
                            <span style="display:none;">
                                <%= lookalike_form.file_field :images, multiple: true %>
                            </span>
                        </label>
                    </div>




                    <div class="field">
                        <%= lookalike_form.text_field :bio, class: "" %> 
                    </div>

                </div>

            <% end %>

            <div class= "flex justify-center">
                <%= user_form.submit "Update" %>
            </div>

        </div>

    <% end %>












    <div class="m-12">
        <h2 class="flex justifyer-cent">Suburbs</h2>

        <div class="overflow-x-auto">
            
            <div class="min-w-screen bg-gray-100 flex items-center justify-center overscroll-auto font-sans overflow-hidden">
                

                <table class="min-w-max w-full table-auto">

                    <thead>
                        <tr class="bg-green-200 text-green-600 text-sm">
                        <th class="py-2 px-4 text-left">name</th>
                        <th class="py-2 px-4 text-left">postcode</th>
                        <th colspan="3"></th>
                        </tr>
                    </thead>

                    <tbody>

                        <% if @user.look_a_like.suburbs != nil %>

                            <% @user.look_a_like.suburbs.each do |suburb| %>

                                <tr>
                                    <td class="m-12"><%= suburb.name %></td>
                                    <td class="m-9"><%= suburb.postcode %></td>
                                    <td class="m-9"><%= link_to 'Remove Suburb', remove_suburb_path(suburb) %></td>
                                </tr>




                            <% end %>

                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>





<div class="px-32 justify-center font-mono">
<%= link_to 'Add A Suburb', new_suburb_path, class: "flex justify-center bg-purple-300" %>
</div>



<div class="p-32 font-mono">
<%= link_to 'Movies', movies_path, class: "flex justify-center bg-purple-300" %>
</div>





<% end %>