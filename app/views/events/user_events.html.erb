
<div class="m-12 p-5 font-mono justify-center flex flex-col bg-gray-50 bg-opacity-60">

    <h1 class="justify-center flex m-4 text-4xl">My Events</h1>

    



    <div class="p-4 bg-purple-200 ">
        <h2 class="justify-center flex">Requests</h2>

        <div class="overflow-x-auto">
            
            <div class="min-w-screen bg-gray-100 flex items-center justify-center overscroll-auto font-sans overflow-hidden">
                

                <table class="min-w-max w-full table-auto font-mono">

                    <thead>
                        <tr class="bg-green-200 text-green-600 text-sm">
                        <th class="py-2 px-4 text-left">DATE</th>
                        <th class="py-2 px-4 text-left">TIME</th>
                        <th colspan="3"></th>
                        </tr>
                    </thead>

                    <tbody>

                        <% if @events != nil %>

                            <% @events.each do |event| %>
                            <% if user_signed_in? && event.user == (current_user) %>
                                <tr>
                                    <td><%= event.date %></td>
                                    <td><%= event.time.to_s(:time) %></td>
                                    <td><%= link_to 'Show', event %></td>
                                    <td><%= link_to 'Edit', edit_event_path(event) %></td>
                                    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                </tr>
                            <% end %>
                            <% end %>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>

    </div>




    <div class="bg-yellow-200 w-20">
        <%= link_to 'New Event', new_event_path %>
    </div>

</div>